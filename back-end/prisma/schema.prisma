generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id         String   @id @default(uuid())
  name       String
  email      String
  message    String
  ip         String?  // ✅ new
  userAgent  String?  // ✅ new
  createdAt  DateTime @default(now())
}